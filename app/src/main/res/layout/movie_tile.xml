<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorTileBackground"
    android:layout_margin="@dimen/movie_tile_margin"
    app:contentPadding="@dimen/movie_tile_padding"
    android:elevation="@dimen/movie_tile_elevation"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

                <ImageView
                    android:id="@+id/tile_poster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tile_title"
                    android:textColor="@color/colorTileTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:background="@color/colorTileBackground"
                    android:paddingTop="@dimen/movie_tile_title_padding_vertical"
                    android:paddingBottom="@dimen/movie_tile_title_padding_vertical"
                    android:paddingLeft="@dimen/movie_tile_title_padding_horizontal"
                    android:paddingRight="@dimen/movie_tile_title_padding_horizontal"
                    />

        </LinearLayout>

</android.support.v7.widget.CardView>